<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.login.recipe">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ImageShow"></activity>
        <activity android:name=".UploadUserImage"></activity>
        <activity android:name=".SearchResults" />
        <activity
            android:name=".SearchPage"
            android:label="@string/title_activity_search_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UploadRecipeImage" />
        <activity
            android:name=".RecipePage"
            android:label="@string/title_activity_recipe_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddRecipe" />
        <activity
            android:name=".MyArea"
            android:label="@string/title_activity_my_area"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SetCuisine" />
        <activity
            android:name=".SetUser"
            android:label="@string/title_activity_set_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ForgotPassword" />
        <activity android:name=".RegisterPage" />
        <activity android:name=".HomePage" />
        <activity
            android:name=".JustPage"
            android:label="@string/title_activity_home_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>