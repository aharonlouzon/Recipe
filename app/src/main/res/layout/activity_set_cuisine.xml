<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetCuisine">

    <CheckBox
        android:id="@+id/asian_rec_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="150dp"
        android:text="Asian"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cuisine_chose_msg_text_set_cuisine" />

    <CheckBox
        android:id="@+id/middle_eastern_rec_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="24dp"
        android:text="Middle Eastern"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/asian_rec_category" />

    <CheckBox
        android:id="@+id/european_rec_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="150dp"
        android:text="European"
        app:layout_constraintStart_toStartOf="@+id/asian_rec_category"
        app:layout_constraintTop_toBottomOf="@+id/cuisine_chose_msg_text_set_cuisine" />

    <CheckBox
        android:id="@+id/italian_rec_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="24dp"
        android:text="Italian"
        app:layout_constraintStart_toStartOf="@+id/middle_eastern_rec_category"
        app:layout_constraintTop_toBottomOf="@+id/european_rec_categories" />

    <CheckBox
        android:id="@+id/meat_rec_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="24dp"
        android:text="Meat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middle_eastern_rec_category" />

    <CheckBox
        android:id="@+id/baking_rec_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="24dp"
        android:text="Baking"
        app:layout_constraintStart_toStartOf="@+id/meat_rec_category"
        app:layout_constraintTop_toBottomOf="@+id/italian_rec_category" />

    <TextView
        android:id="@+id/cuisine_chose_msg_text_set_cuisine"
        android:layout_width="307dp"
        android:layout_height="94dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/cuisine_chose_msg"
        android:textColor="#E91E63"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/continue_button_add_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:background="#E91E63"
        android:text="Continue"
        android:textColor="#FCFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baking_rec_category" />
</android.support.constraint.ConstraintLayout>